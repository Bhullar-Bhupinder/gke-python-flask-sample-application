pipeline {
    agent any
//    agent { label 'jenkins-jenkins-agent' }

    triggers
    {
        pollSCM('* * * * *')
    }

    stages {
    
        stage('Checkout') {
            steps {
                echo 'Checking images..'
                sh 'docker image ls'
            }
        }
          
         stage('Docker Build') {
            parallel {
                stage('Build Custom tagged Image') {
                    steps {
                        echo 'Building custom tagged Image..'
                        sh 'docker image build -t bobbybabu007/python-flask-docker-sample:{BUILD_NUMBER} '
                    }
                }
                stage('Build latest tagged Image') {
                    when { expression { return isNightly() } }
                    steps {
                        echo 'Building latest tagged Image..'
                        sh 'docker image build -t bobbybabu007/python-flask-docker-sample:latest '
                    }
                }
            }      

        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm test'
            }
        }
        
        stage('Package') {
            steps {
                echo 'Packaging....'
                sh 'npm run package'
                archiveArtifacts artifacts: '**/distribution/*.zip', fingerprint: true
            }
        }
    }
}
}
